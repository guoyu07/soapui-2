{
  if (logMonitor == null) {
    if (!isCommandLine && logCache.size() < 1000)     logCache.add(msg);
    return;
  }
  if (SwingUtilities.isEventDispatchThread()) {
    logMonitor.logEvent(msg);
  }
 else {
    SwingUtilities.invokeLater(new Runnable(){
      public void run(){
        logMonitor.logEvent(msg);
      }
    }
);
  }
}
