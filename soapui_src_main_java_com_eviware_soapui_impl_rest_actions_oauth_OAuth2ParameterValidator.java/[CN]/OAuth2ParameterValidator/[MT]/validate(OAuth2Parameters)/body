{
  validateHttpUrl(parameters.authorizationUri,OAuth2AccessTokenForm.AUTHORIZATION_URI);
  validateUri(parameters.redirectUri,OAuth2AccessTokenForm.REDIRECT_URI);
  validateHttpUrl(parameters.accessTokenUri,OAuth2AccessTokenForm.ACCESS_TOKEN_URI);
  validateRequiredStringValue(parameters.clientId,OAuth2AccessTokenForm.CLIENT_IDENTIFICATION);
  if (parameters.getOAuth2Flow() != OAuth2Profile.OAuth2Flow.IMPLICIT_GRANT) {
    validateRequiredStringValue(parameters.clientSecret,OAuth2AccessTokenForm.CLIENT_SECRET);
  }
}
