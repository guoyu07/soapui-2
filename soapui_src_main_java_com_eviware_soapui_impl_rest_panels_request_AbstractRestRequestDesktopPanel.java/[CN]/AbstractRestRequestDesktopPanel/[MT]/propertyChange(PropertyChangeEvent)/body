{
  updateFullPathLabel();
  if ((evt.getPropertyName().equals("path") || evt.getPropertyName().equals("restMethod")) && (getRequest().getResource() == null || getRequest().getResource() == evt.getSource())) {
    if (pathLabel != null) {
      updateFullPathLabel();
    }
    if (!updating && pathTextField != null) {
      updating=true;
      pathTextField.setText((String)evt.getNewValue());
      pathTextField.setToolTipText(pathTextField.getText());
      updating=false;
    }
  }
  super.propertyChange(evt);
}
