{
  String scheme=uri.getScheme();
  String authority=uri.getAuthority();
  String endpoint;
  if (authority == null) {
    endpoint="";
  }
 else   if (scheme == null) {
    endpoint=DEFAULT_SCHEME + SCHEME_SEPARATOR + authority;
  }
 else {
    endpoint=scheme + SCHEME_SEPARATOR + authority;
  }
  return endpoint;
}
