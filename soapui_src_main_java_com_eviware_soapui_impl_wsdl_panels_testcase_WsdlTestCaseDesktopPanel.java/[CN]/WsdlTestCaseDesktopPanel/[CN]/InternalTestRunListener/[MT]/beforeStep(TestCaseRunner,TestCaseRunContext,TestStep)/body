{
  if (SoapUI.getTestMonitor().hasRunningLoadTest(getModelItem()) || SoapUI.getTestMonitor().hasRunningSecurityTest(getModelItem()))   return;
  if (testStep != null) {
    if (SwingUtilities.isEventDispatchThread()) {
      testStepList.setSelectedValue(testStep,true);
    }
 else {
      SwingUtilities.invokeLater(new Runnable(){
        public void run(){
          testStepList.setSelectedValue(testStep,true);
        }
      }
);
    }
  }
}
