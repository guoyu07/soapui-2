{
  try {
    httpMethod.getMetrics().setIpAddress(InetAddress.getByName(httpMethod.getURI().getHost()).getHostAddress());
    httpMethod.getMetrics().setPort(httpMethod.getURI().getPort(),httpClient.getConnectionManager().getSchemeRegistry().getScheme(httpMethod.getURI().getScheme()).getDefaultPort());
  }
 catch (  UnknownHostException uhe) {
  }
catch (  IllegalStateException ise) {
  }
}
