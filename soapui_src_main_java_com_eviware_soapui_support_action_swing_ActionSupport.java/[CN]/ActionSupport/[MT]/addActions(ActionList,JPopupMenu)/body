{
  if (actions == null || actions.getActionCount() == 0)   return popup;
  for (int i=0; i < actions.getActionCount(); i++) {
    Action action=actions.getActionAt(i);
    if (action instanceof MarkerAction)     continue;
    if (action == ActionSupport.SEPARATOR_ACTION)     popup.addSeparator();
 else     if (action instanceof ActionSupport.ActionListAction) {
      ActionList actionList=((ActionListAction)action).getActionList();
      if (actionList == null || actionList.getActionCount() == 0)       System.err.println("null/empty ActionList in action " + action.getValue(Action.NAME));
 else       popup.add(buildMenu(actionList));
    }
 else     popup.add(action);
  }
  return popup;
}
