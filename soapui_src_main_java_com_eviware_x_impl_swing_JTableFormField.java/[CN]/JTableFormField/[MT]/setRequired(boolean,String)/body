{
  super.setRequired(required,message);
  if (required)   getComponent().setBorder(BorderFactory.createCompoundBorder(BorderFactory.createLineBorder(Color.RED),BorderFactory.createEmptyBorder(2,2,2,2)));
 else   getComponent().setBorder(BorderFactory.createCompoundBorder(BorderFactory.createLineBorder(Color.GRAY),BorderFactory.createEmptyBorder(2,2,2,2)));
}
