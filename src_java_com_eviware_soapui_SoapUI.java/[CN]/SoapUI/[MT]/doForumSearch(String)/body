{
  if (!searchField.getText().equals(text))   searchField.setText(text);
  if (StringUtils.hasContent(text)) {
    Tools.openURL("http://www.eviware.com/forums/index.php?action=search2&search=" + URLEncoder.encode(text.trim()));
  }
 else {
    Tools.openURL("http://www.eviware.com/forums");
  }
}
