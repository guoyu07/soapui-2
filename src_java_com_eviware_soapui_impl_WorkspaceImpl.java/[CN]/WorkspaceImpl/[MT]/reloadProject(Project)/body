{
  int ix=projectList.indexOf(project);
  if (ix == -1)   throw new RuntimeException("Project [" + project.getName() + "] not available in workspace for reload");
  projectList.remove(ix);
  fireProjectRemoved(project);
  String tempName=project.getName();
  project.release();
  project=new WsdlProject(project.getPath(),this,false,true,tempName,null);
  projectList.add(ix,project);
  fireProjectAdded(project);
  return project;
}
