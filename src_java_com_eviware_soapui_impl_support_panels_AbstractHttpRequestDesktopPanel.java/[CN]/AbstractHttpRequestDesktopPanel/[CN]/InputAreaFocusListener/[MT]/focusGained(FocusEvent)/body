{
  responseHasFocus=false;
  statusBar.setTarget(sourceEditor.getInputArea());
  if (!splitButton.isEnabled()) {
    requestTabs.setSelectedIndex(0);
    return;
  }
  if (getModelItem().getSettings().getBoolean(UISettings.NO_RESIZE_REQUEST_EDITOR))   return;
  if (requestSplitPane.getUI() instanceof SoapUISplitPaneUI && ((SoapUISplitPaneUI)requestSplitPane.getUI()).hasBeenDragged())   return;
  int pos=requestSplitPane.getDividerLocation();
  if (pos >= 600)   return;
  if (requestSplitPane.getMaximumDividerLocation() > 700)   requestSplitPane.setDividerLocation(600);
 else   requestSplitPane.setDividerLocation(0.8);
}
