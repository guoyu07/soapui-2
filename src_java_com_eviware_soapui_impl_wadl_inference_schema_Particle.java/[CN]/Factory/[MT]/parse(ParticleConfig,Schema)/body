{
  if (xml instanceof AttributeParticleConfig)   return new AttributeParticle((AttributeParticleConfig)xml,schema);
  if (xml instanceof ElementParticleConfig)   return new ElementParticle((ElementParticleConfig)xml,schema);
  if (xml instanceof ReferenceParticleConfig)   return new ReferenceParticle((ReferenceParticleConfig)xml,schema);
  return null;
}
