{
  try {
    String tmpBuffer=writer.toString("utf-8");
    if ("\r\n".equals(System.getProperty("line.separator"))) {
      tmpBuffer=tmpBuffer.replaceAll("\r[^\n]",System.getProperty("line.separator"));
    }
 else {
      tmpBuffer=tmpBuffer.replaceAll("\r\n",System.getProperty("line.separator"));
    }
    return tmpBuffer;
  }
 catch (  UnsupportedEncodingException e) {
    return null;
  }
}
