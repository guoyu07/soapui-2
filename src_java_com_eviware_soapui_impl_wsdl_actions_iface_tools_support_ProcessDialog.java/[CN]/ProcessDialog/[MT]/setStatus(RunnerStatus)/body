{
  this.status=status;
  if (status == RunnerStatus.RUNNING) {
    progressBar.setIndeterminate(true);
    if (cancelButton != null)     cancelButton.setEnabled(true);
    if (closeButton != null)     closeButton.setEnabled(false);
  }
 else   if (status == RunnerStatus.ERROR) {
    if (logArea == null) {
      setVisible(false);
      return;
    }
    progressBar.setIndeterminate(false);
    progressBar.setValue(0);
    if (cancelButton != null)     cancelButton.setEnabled(false);
    if (closeButton != null)     closeButton.setEnabled(true);
  }
 else   if (status == RunnerStatus.FINISHED) {
    if (logArea == null) {
      setVisible(false);
      return;
    }
    progressBar.setIndeterminate(false);
    progressBar.setValue(1);
    if (cancelButton != null)     cancelButton.setEnabled(false);
    if (closeButton != null)     closeButton.setEnabled(true);
  }
}
