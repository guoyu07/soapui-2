{
  ProcessDialog processDialog=null;
  try {
    processDialog=new ProcessDialog(runner.getName(),runner.getDescription(),runner.showLog(),runner.canCancel());
    ModelItem modelItem=runner.getModelItem();
    if (modelItem == null)     processDialog.log("Running " + runner.getName() + "\r\n");
 else     processDialog.log("Running " + runner.getName() + " for ["+ modelItem.getName()+ "]\r\n");
    processDialog.run(runner);
  }
 catch (  Exception ex) {
    UISupport.showErrorMessage(ex);
    throw ex;
  }
 finally {
    if (processDialog != null)     processDialog.setVisible(false);
  }
}
