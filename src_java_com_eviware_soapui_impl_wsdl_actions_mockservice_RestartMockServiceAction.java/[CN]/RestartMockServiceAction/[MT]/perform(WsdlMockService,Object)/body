{
  try {
    UISupport.setHourglassCursor();
    if (!SoapUI.getDesktop().hasDesktopPanel(mockService))     UISupport.showDesktopPanel(mockService);
    if (mockService.getMockRunner() != null)     mockService.getMockRunner().stop();
    mockService.start();
  }
 catch (  Exception e) {
    UISupport.showErrorMessage(e);
  }
 finally {
    UISupport.resetCursor();
  }
}
