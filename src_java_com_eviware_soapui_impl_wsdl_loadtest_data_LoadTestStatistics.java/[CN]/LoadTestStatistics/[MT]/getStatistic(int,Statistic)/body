{
  if (stepIndex == TOTAL)   stepIndex=data.length - 1;
switch (statistic) {
case TPS:
case AVERAGE:
    return data[stepIndex][statistic.getIndex()] / 100;
case ERRORRATIO:
  return data[stepIndex][Statistic.COUNT.getIndex()] == 0 ? 0 : (long)(((float)data[stepIndex][Statistic.ERRORS.getIndex()] / (float)data[stepIndex][Statistic.COUNT.getIndex()]) * 100);
default :
return data[stepIndex][statistic.getIndex()];
}
}
