{
  super(new BorderLayout());
  this.project=project;
  this.listenPort=listenPort;
  this.targetEndpoint=endpoint;
  this.addEndpoint=addEndpoint;
  this.isProxy=isProxy;
  this.incomingRequestWss=incomingRequestWss;
