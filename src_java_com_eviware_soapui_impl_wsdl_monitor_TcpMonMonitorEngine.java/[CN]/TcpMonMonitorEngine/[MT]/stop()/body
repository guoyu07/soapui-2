{
  if (sw.isAlive()) {
    try {
      for (int i=0; i < connections.size(); i++) {
        Connection conn=(Connection)connections.get(i);
        conn.halt();
      }
      sw.halt();
    }
 catch (    Throwable e) {
      SoapUI.log.info("Error stopping monitor: " + e.toString());
    }
    SoapUI.log.info("Stopped SOAP Monitor on local port " + getLocalPort());
  }
}
