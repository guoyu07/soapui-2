{
  if (getRequest().getOperation() == null)   return modelItem == getRequest() || modelItem == getModelItem() || ModelSupport.getModelItemProject(getRequest()) == modelItem || modelItem == getModelItem().getTestCase() || modelItem == getModelItem().getTestCase().getTestSuite();
 else   return modelItem == getRequest() || modelItem == getModelItem() || modelItem == getRequest().getOperation() || modelItem == getRequest().getOperation().getInterface() || modelItem == getRequest().getOperation().getInterface().getProject() || modelItem == getModelItem().getTestCase() || modelItem == getModelItem().getTestCase().getTestSuite();
}
