{
  scrollPane.setLineNumbersEnabled(enable);
  try {
    if (scrollPane.areLineNumbersEnabled())     ((LineNumberBorder)scrollPane.getViewportBorder()).setBackground(StandaloneSoapUICore.SoapUITheme.BACKGROUND_COLOR);
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  toggleLineNumbersMenuItem.setSelected(enable);
}
