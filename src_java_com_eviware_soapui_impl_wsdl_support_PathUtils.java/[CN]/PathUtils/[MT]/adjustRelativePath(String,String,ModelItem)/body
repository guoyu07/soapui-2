{
  if (StringUtils.isNullOrEmpty(root) || StringUtils.isNullOrEmpty(str))   return str;
  if (!isRelativePath(str))   return str;
  root=PropertyExpansionUtils.expandProperties(contextModelItem,root);
  if (isHttpPath(root))   root+="/";
 else   root+=File.separatorChar;
  return Tools.joinRelativeUrl(root,str);
}
