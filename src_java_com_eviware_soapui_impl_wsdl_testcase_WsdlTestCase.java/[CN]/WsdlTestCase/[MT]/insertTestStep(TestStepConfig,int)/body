{
  TestStepConfig newStepConfig=ix == -1 ? getConfig().addNewTestStep() : getConfig().insertNewTestStep(ix);
  newStepConfig.set(stepConfig);
  WsdlTestStep testStep=createTestStepFromConfig(newStepConfig);
  if (!ensureUniqueName(testStep))   return null;
  if (ix == -1)   testSteps.add(testStep);
 else   testSteps.add(ix,testStep);
  testStep.afterLoad();
  if (getTestSuite() != null)   (getTestSuite()).fireTestStepAdded(testStep,ix == -1 ? testSteps.size() - 1 : ix);
  return testStep;
}
