{
  if (token == null)   token="";
  String replToken=PropertyExpansionUtils.expandProperties(context,token);
  if (replToken.length() > 0) {
    int ix=-1;
    if (useRegEx) {
      if (content.matches(replToken))       ix=0;
    }
 else {
      ix=ignoreCase ? content.toUpperCase().indexOf(replToken.toUpperCase()) : content.indexOf(replToken);
    }
    if (ix != -1)     throw new AssertionException(new AssertionError(type + " contains token [" + replToken+ "]"));
  }
  return type + " does not contain token [" + replToken+ "]";
}
