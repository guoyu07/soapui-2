{
  dialog=ADialogBuilder.buildDialog(Form.class);
  dialog.getFormField(Form.STEPNAME).addFormFieldValidator(new RequiredValidator());
  dialog.getFormField(Form.EXTRACTPARAMS).setProperty("action",new ExtractParamsAction());
  ((XFormOptionsField)dialog.getFormField(Form.HTTPMETHOD)).setOptions(new Object[]{RestRequest.RequestMethod.GET,RestRequest.RequestMethod.POST,RestRequest.RequestMethod.PUT,RestRequest.RequestMethod.DELETE,RestRequest.RequestMethod.HEAD});
}
