{
  String rep=toString();
  if (stringRep.equals(rep))   return;
  Object obj=PropertyUtils.getProperty(container,propertyName);
  if (obj == null)   throw new Exception("property value is null");
  String str=obj.toString();
  int ix=str.indexOf(stringRep);
  if (ix == -1)   throw new Exception("property expansion [" + stringRep + "] not found for update");
  while (ix != -1) {
    str=str.substring(0,ix) + rep + str.substring(ix + stringRep.length());
    ix=str.indexOf(str,ix + rep.length());
  }
  PropertyUtils.setProperty(container,propertyName,str);
  stringRep=rep;
}
