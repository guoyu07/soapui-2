{
  if (xpath.length() > 0) {
    StringBuffer buf=new StringBuffer();
    for (int c=0; c < xpath.length(); c++) {
      char ch=xpath.charAt(c);
switch (ch) {
case '\n':
        buf.append(' ');
      break;
case '\'':
    buf.append("\\'");
  break;
default :
buf.append(ch);
}
}
xpath=buf.toString();
}
return xpath;
}
