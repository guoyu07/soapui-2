{
  SecurityScanNode node=(SecurityScanNode)securityTestTree.getLastSelectedPathComponent();
  SecurityScan securityCheck=node.getSecurityScan();
  if (securityCheck.isConfigurable()) {
    SecurityCheckConfig backupCheckConfig=(SecurityCheckConfig)securityCheck.getConfig().copy();
    SecurityConfigurationDialog dialog=SoapUI.getSoapUICore().getSecurityScanRegistry().getUIBuilder().buildSecurityCheckConfigurationDialog((SecurityScan)securityCheck);
    if (!dialog.configure()) {
      securityCheck.copyConfig(backupCheckConfig);
    }
    dialog.release();
  }
}
