{
  if (token == null)   token="";
  String replToken=PropertyExpander.expandProperties(context,token);
  if (replToken.length() > 0) {
    int ix=-1;
    if (useRegEx) {
      if (content.matches(replToken))       ix=0;
    }
 else {
      ix=content.toUpperCase().indexOf(replToken.toUpperCase());
    }
    if (ix == -1)     return false;
  }
  return true;
}
