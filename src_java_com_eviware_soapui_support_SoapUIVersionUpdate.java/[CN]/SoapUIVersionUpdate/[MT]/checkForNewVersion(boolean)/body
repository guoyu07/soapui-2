{
  try {
    getLatestVersionAvailable(new URL(LATEST_VERSION_XML_LOCATION));
  }
 catch (  Exception e) {
    UISupport.showErrorMessage("Could not check for new version due network problem!");
    return;
  }
  if (isNewReleaseAvailable() && (!skipThisVersion() || helpAction))   showNewVersionDownloadDialog();
 else   if (helpAction)   UISupport.showInfoMessage("Currently no new version available","No New Version");
}
