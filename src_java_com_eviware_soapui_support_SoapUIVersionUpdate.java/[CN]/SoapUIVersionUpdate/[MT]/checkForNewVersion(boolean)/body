{
  try {
    getLatestVersionAvailable(new URL(LATEST_VERSION_XML_LOCATION));
  }
 catch (  Exception e) {
    if (helpAction) {
      UISupport.showInfoMessage("Currently no new version available","No New Version");
    }
    return;
  }
  if (isNewMajorReleaseAvailable() && (!skipThisVersion() || helpAction))   showNewMajorVersionDownloadDialog();
 else   if (isNewMinorReleaseAvailable() && (!skipThisVersion() || helpAction))   showNewMinorVersionDownloadDialog();
 else   if (helpAction)   UISupport.showInfoMessage("Currently no new version available","No New Version");
}
