{
  int ix1=endpoint.indexOf("://");
  if (ix1 < 0)   return endpoint;
  int ix2=endpoint.indexOf(":",ix1 + 3);
  if (ix2 == -1 || host.indexOf(":") > 0) {
    ix2=endpoint.indexOf("/",ix1 + 3);
    if (ix2 == ix1 + 3)     ix2=-1;
  }
  return endpoint.substring(0,ix1) + "://" + host+ (ix2 == -1 ? "" : endpoint.substring(ix2));
}
