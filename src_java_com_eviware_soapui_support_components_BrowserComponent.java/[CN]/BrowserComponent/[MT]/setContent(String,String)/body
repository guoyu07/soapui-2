{
  if (!SwingUtilities.isEventDispatchThread()) {
    SwingUtilities.invokeLater(new ContentSetter(content,contentType,null));
  }
 else {
    if (browser == null) {
      initBrowser();
    }
    browser.activate();
    browser.setContent(content,contentType);
  }
  pcs.firePropertyChange("content",null,null);
}
