{
  if (!SwingUtilities.isEventDispatchThread()) {
    SwingUtilities.invokeLater(new ContentSetter(contentAsString,contentType,contextUri));
  }
 else {
    if (browser == null) {
      initBrowser();
    }
    browser.activate();
    browser.setContentWithContext(contentAsString,contentType,contextUri);
  }
}
