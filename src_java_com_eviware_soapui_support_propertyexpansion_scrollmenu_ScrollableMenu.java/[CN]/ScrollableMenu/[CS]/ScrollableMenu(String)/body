{
  super(name);
  timerUp=new Timer(scrollSpeed,new ActionListener(){
    public void actionPerformed(    ActionEvent evt){
      scrollUp();
    }
  }
);
  timerDown=new Timer(scrollSpeed,new ActionListener(){
    public void actionPerformed(    ActionEvent evt){
      scrollDown();
    }
  }
);
  screenHeight=400;
  createButtons();
  hideButtons();
}
