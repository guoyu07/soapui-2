{
  Rectangle raOuter=comp.getBounds();
  Rectangle raInner=comp.getParent().getBounds();
  return new Insets(raInner.y - raOuter.y + AUTOSCROLL_MARGIN,raInner.x - raOuter.x + comp.getWidth(),raOuter.height - raInner.height - raInner.y + raOuter.y + AUTOSCROLL_MARGIN,raOuter.width - raInner.width - raInner.x + raOuter.x + AUTOSCROLL_MARGIN);
}
