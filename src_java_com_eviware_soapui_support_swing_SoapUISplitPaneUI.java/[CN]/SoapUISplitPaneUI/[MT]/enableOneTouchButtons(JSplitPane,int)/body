{
  JButton leftButton=((SoapUIDivider)getDivider()).getLeftButton();
  JButton rightButton=((SoapUIDivider)getDivider()).getRightButton();
  if (leftButton != null)   leftButton.setEnabled(location > jc.getMinimumDividerLocation() && jc.getRightComponent() != null && jc.getRightComponent().isVisible());
  if (rightButton != null)   rightButton.setEnabled(location < jc.getMaximumDividerLocation() && jc.getLeftComponent() != null && jc.getLeftComponent().isVisible());
}
