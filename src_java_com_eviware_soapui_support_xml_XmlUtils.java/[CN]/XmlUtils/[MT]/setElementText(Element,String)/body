{
  Node node=elm.getFirstChild();
  if (node == null) {
    if (text != null)     elm.appendChild(elm.getOwnerDocument().createTextNode(text));
  }
 else   if (node.getNodeType() == Node.TEXT_NODE) {
    if (text == null)     node.getParentNode().removeChild(node);
 else     node.setNodeValue(text);
  }
 else   if (text != null) {
    Text textNode=node.getOwnerDocument().createTextNode(text);
    elm.insertBefore(textNode,elm.getFirstChild());
  }
}
