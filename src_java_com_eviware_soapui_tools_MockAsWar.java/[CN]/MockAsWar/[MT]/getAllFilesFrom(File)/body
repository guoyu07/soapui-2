{
  ArrayList<File> result=new ArrayList<File>();
  if (dir.isDirectory()) {
    result.addAll(Arrays.asList(dir.listFiles()));
    ArrayList<File> toAdd=new ArrayList<File>();
    for (    File f : result) {
      if (f.isDirectory())       toAdd.addAll(getAllFilesFrom(f));
    }
    result.addAll(toAdd);
  }
  return result;
}
