{
  JFileChooser chooser=getChooser(action);
  chooser.setFileSelectionMode(JFileChooser.FILES_ONLY);
  chooser.setDialogTitle(title);
  chooser.setAcceptAllFileFilterUsed(true);
  if (extension != null && fileType != null)   chooser.setFileFilter(new ExtensionFileFilter(extension,fileType));
  if (defaultFile != null)   chooser.setSelectedFile(defaultFile);
  if (chooser.showSaveDialog(getParent()) != JFileChooser.APPROVE_OPTION)   return null;
  return chooser.getSelectedFile();
}
