{
  int x=_offsetToX(line,offset);
  int width=painter.getFontMetrics().charWidth('w');
  if (offset > 0)   x+=(width + 5);
  int y=lineToY(line);
  if (line > 0)   y+=5;
  if (line > 0)   line++;
  scrollRectToVisible(new Rectangle(x,y,1,painter.getFontMetrics().getHeight()));
  updateScrollBars();
  painter.repaint();
}
