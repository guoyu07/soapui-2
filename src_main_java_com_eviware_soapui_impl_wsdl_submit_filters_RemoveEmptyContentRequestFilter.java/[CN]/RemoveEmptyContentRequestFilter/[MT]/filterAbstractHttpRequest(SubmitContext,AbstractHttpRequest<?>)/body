{
  if (wsdlRequest != null && !wsdlRequest.isRemoveEmptyContent())   return;
  String content=(String)context.getProperty(BaseHttpRequestTransport.REQUEST_CONTENT);
  if (!StringUtils.hasContent(content))   return;
  String soapNamespace=null;
  String newContent=null;
  if (wsdlRequest instanceof WsdlRequest)   soapNamespace=((WsdlRequest)wsdlRequest).getOperation().getInterface().getSoapVersion().getEnvelopeNamespace();
  while (!content.equals(newContent)) {
    if (newContent != null)     content=newContent;
    newContent=removeEmptyContent(content,soapNamespace,context.hasProperty("RemoveEmptyXsiNil"));
    if (!context.hasProperty("RemoveEmptyRecursive"))     break;
  }
  if (newContent != null)   context.setProperty(BaseHttpRequestTransport.REQUEST_CONTENT,newContent);
}
